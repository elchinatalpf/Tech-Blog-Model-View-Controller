<div class="text">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div>
  {{#if logged_in}}
  <form class="new-comment-form" data-blogid={{id}}>
    <div>
      <textarea class="ml-5" name="comment-body" id="comment-description"></textarea>
    </div>
    <div>
      <button class="button is-warning ml-5 mb-5" type="submit">Add Comment</button>
    </div>
  </form>
{{/if}}
/<div>
  {{#each comments as |comment|}}
  <div style="border-style: solid;">
    <p>{{comments.comment_content}}</p>
  </div>
</div>